<Window x:Class="Upgrade.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Upgrade.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="640" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Canvas>
        <Image Name="imgBg" Canvas.Left="0" Canvas.Right="0" Width="640" Height="320"></Image>
        <StackPanel Orientation="Vertical" Canvas.Left="70" Canvas.Top="200" Width="500">
            <TextBlock x:Name="tbTip" Margin="0,16,0,0" HorizontalAlignment="Center" Foreground="#FF6E6E6E" >正在更新</TextBlock>
            <ProgressBar x:Name="progressbar" Margin="0,16,0,0" Height="16" Width="500"/>
            <TextBlock x:Name="tbStatus" Margin="0,16,0,0" HorizontalAlignment="Center" Foreground="#FF7F7F7F"> 234Mk/s</TextBlock>
        </StackPanel>
    </Canvas>
</Window>
